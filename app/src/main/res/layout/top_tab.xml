<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/border"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/tab_Restaurant"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/design_default_color_primary"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_Restaurant_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            android:src="@mipmap/restaurant_icon" />

        <TextView
            android:id="@+id/tab_Restaurant_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_text_1"
            android:textColor="#ffffff" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_StoredList"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/design_default_color_primary"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_StoredList_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            android:src="@mipmap/storedlist_icon" />

        <TextView
            android:id="@+id/tab_StoredList_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_text_2"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>